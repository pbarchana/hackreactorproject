@import 'nib'

// Variables
// =========

$shadow = 0 2px 6px rgba(0,0,0,0.1),0 4px 15px -5px rgba(0,0,0,0.0)
$color1 = #ca8142
$backgroundColor = white
$sidePanelWidth = 300px

html, body, .dataCtrl, .content, .side-panel
  height 100%

// Loading popover
// ===============

.loading
  position absolute
  top: 0; left: 0; bottom: 0; right: 0;
  margin auto
  background: rgba(255,255,255,0.6)
  z-index 100
  img
    position absolute
    top: 0; left: 0; bottom: 0; right: 0;
    margin auto

// D3 Styles
// =========

svg
  background-color: $backgroundColor
  left: 0px
  top: 0px
  position: absolute

.node
  stroke: #fff
  stroke-width: 3px

.link
  stroke-width: 4px
  stroke: #999
  stroke-opacity: 0.3



// Main Styles
// ================

.navbar
  border-radius 0px
  margin-bottom 0px

.fluid-container
  // Make the container background transparent so we can see the background div
  background: rgba(255,255,255,0.0);
  padding-left: 15px
  padding-right: 15px
  margin-left: auto
  margin-right: auto
  z-index: -100

// Site Title
.title
  font-size 25px
  font-weight 500

.content
  position relative
  float left
  margin-right: $sidePanelWidth
  // width: 100%
  // margin-right: 240px

.side-panel
  // position absolute
  // top 0px 
  // bottom 0px
  // right 0px
  // margin auto
  // overflow: hidden
  padding 10px
  position relative
  float right
  width: $sidePanelWidth
  background: url('http://s3.amazonaws.com/linkedin_inmaps_images/images/sidepanel-bg.gif') #dedede repeat-y left

// Table Styles
.dropdown-table
  margin: 0px
  overflow: auto
  background-color white

  .key
    font-weight 600
    width: 20%
// TODO: find a way to adjust panel body without overriding defaults
.panel-body
  padding 5px

// Display results
.results
  margin-right 40px
  background-color white
  box-shadow $shadow

  .result:hover
    background-color #F0F0FF
    cursor: pointer

  .result
    padding 10px
    border-bottom 1px solid #E9E9E9

    .info
      font-size 10px
      color #848484



// Miscellaneous Add-ons
// =====================

// To make columns float above the svg panel
// Don't put this on rows! It will mess up the svg functionality
.hover
  z-index: 50

.float-right
  float right

