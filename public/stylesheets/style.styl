@import 'nib'

// Reset all styles

$shadow = 0 2px 6px rgba(0,0,0,0.1),0 4px 15px -5px rgba(0,0,0,0.0)

svg
  z-index -10
  background-color: #F5F5F5
  left: 0px
  top: 0px
  position: absolute

.float-right
  float right

.node
  stroke: #fff
  stroke-width: 3px

.link
  stroke-width: 4px
  stroke: #999
  stroke-opacity: 0.3

.fluid-container
  // Make the container background transparent so we can see the background div
  background: rgba(255,255,255,0.0);
  padding-left: 15px
  padding-right: 15px
  margin-left: auto
  margin-right: auto

.top-row
  margin-top: 20px

.title 
  font-size 25px
  font-weight 500
  
.results 
  margin-right 40px
  background-color white
  box-shadow $shadow
  
  .result:hover
    background-color #F0F0FF
    cursor: pointer

  .result
    padding 10px
    border-bottom 1px solid #E9E9E9

    .info
      font-size 10px
      color #848484

