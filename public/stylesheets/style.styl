@import 'nib'

// Reset all styles

html, body
  background-color: #F5F5F5

.fluid-container
  padding-left: 15px
  padding-right: 15px
  margin-left: auto
  margin-right: auto
  background-color: #F5F5F5

.top-row
  line-height 30px
  margin-top: 20px

.title 
  font-size 25px
  font-weight 500
  text-align right
  
.results 
  margin-right 40px
  background-color white
  box-shadow $shadow

  .result
    margin 0px 10px 0px 10px
    border-bottom 1px solid #E9E9E9
    line-height 32px
  

